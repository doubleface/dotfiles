. /etc/bash_completion
. /usr/share/autojump/autojump.sh

export GIT_PS1_SHOWDIRTYSTATE=1 GIT_PS1_SHOWSTASHSTATE=1 GIT_PS1_SHOWUNTRACKEDFILES=1

# NODE
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

nvm use lts/carbon

. <(npm completion)

# Only load liquidprompt in interactive shells, not from a script or from scp
echo $- | grep -q i 2>/dev/null && . /usr/share/liquidprompt/liquidprompt

# use HUB and make it work with vim-fugitive
alias git=hub
function gitroot {
    cd `git rev-parse --show-toplevel`
}
function vimf {
    vim `git rev-parse --show-toplevel`/.git/index
}
alias git-clean-branches="git pull && git branch | cut -d' ' -f3 | xargs git branch -d"

alias say='espeak -v fr'

# GO
export GOPATH="$HOME/Workspace/go"
export PATH="$GOPATH/bin:$HOME/bin:$HOME/.local/bin:$HOME/Workspace/maintenance/:$HOME/Workspace/maintenance/cli/:$PATH"

export SENTRY_TOKEN=`pass work/sentry-token`
export COZY_COUCH_USER=`pass work/couch-user`
export COZY_COUCH_PASSWORD=`pass work/couch-password`

# ssh agent
if [ -z "$SSH_AUTH_SOCK" ] ; then
    eval `ssh-agent -s`
    ssh-add
fi

