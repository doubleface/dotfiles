#!/usr/bin/env bash
set -e

print_summaries() {
  for file in $_ENVDEV_ROOT/libexec/envdev-*; do
    if [ ! -h $file ]; then
      local summary=$(grep "^# Summary:" $file | cut -d ' ' -f3-)
      if [ -n "$summary" ]; then
        local name=$(basename $file | sed 's/envdev-//')
        echo "$name" | awk '{ printf "   %-20s   ", $1}'
        echo -n $summary
        echo
      fi
    fi
  done
}

print_help() {
  local usage=$(grep "^# Usage:" $1 | cut -d ' ' -f2-)
  local halp="$(awk '/^# Help:/,/^[^#]/' $1 | grep "^#" | sed "s/^# Help: //" | sed "s/^# //" | sed "s/^#//")"

  if [ -n "$usage" ]; then
    echo $usage
    [ -n "$halp" ] && echo && echo "$halp"
  else
    echo "Sorry, this command isn't documented yet."
  fi
}

# Provide envdev completions
if [ "$1" = "--complete" ]; then
  exec "envdev-commands"
  exit
fi

case "$1" in
"") echo "Usage: envdev <command> [<args>]

Some useful envdev commands are:
$(print_summaries)

See 'envdev help <command>' for information on a specific command."
;;
*)
  command_path="$(command -v "$_ENVDEV_ROOT/libexec/envdev-$1" || true)"
  if [ -n "$command_path" ]; then
    print_help "$_ENVDEV_ROOT/libexec/envdev-$1"
  else
    echo "envdev: no such command \`$1'"
  fi
esac
