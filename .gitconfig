[user]
    name = doubleface
    email = christophe@thiriot.xyz
[core]
    editor = vim
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
[color "branch"]
    upstream = cyan
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    ci = commit
    co = checkout
    st = status
    dif = diff
    gl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    glf = log --decorate --graph --all --pretty=medium --relative-date
    diffwords = diff --word-diff=color
    clean = clean -i
    purge = clean -dxi

[status]
    submoduleSummary = true
    showUntrackedFiles = all
[pull]
    rebase = preserve
[push]
    default = simple
    followTags = true
[diff]
	tool = vimdiff
